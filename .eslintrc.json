{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},

	"env": {
		"es6": true,
		"node": true
	},

	"globals": {
		"document": false,
		"navigator": false,
		"window": false
	},

	"rules": {
		"quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"semi": ["error", "always"],
		"semi-spacing": ["error", { "before": false, "after": true }],
		"comma-dangle": ["error", {
			"arrays": "always-multiline",
			"objects": "always-multiline",
			"imports": "always-multiline",
			"exports": "never",
			"functions": "ignore"
		}]
	}
}
