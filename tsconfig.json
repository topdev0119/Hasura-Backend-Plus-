{
  "exclude": ["node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2015.promise"],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  }
}
